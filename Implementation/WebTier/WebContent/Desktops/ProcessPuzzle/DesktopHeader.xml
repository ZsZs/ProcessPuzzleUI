<?xml version="1.0" encoding="UTF-8"?>
<sd:smartDocumentDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:pp="http://www.processpuzzle.com" 
   xmlns:sd="http://www.processpuzzle.com/SmartDocument" 
   xsi:schemaLocation="http://www.processpuzzle.com/SmartDocument http://processpuzzle.com/Schemas/SmartDocument.xsd">
   <sd:name>Desktop Header Document</sd:name>
   <sd:description>Header part of ProcessPuzzle desktop.</sd:description>
   <sd:version>0.5</sd:version>
   
   <sd:resources>
      <sd:styleSheets></sd:styleSheets>
      <sd:images></sd:images>
      <sd:javaScripts></sd:javaScripts>
   </sd:resources>

   <sd:documentBody tag="div" id="desktopHeader">
      <sd:compositeElement tag="div" id="desktopTitleBar">
         <sd:element tag="div" id="desktopTitleLogo"></sd:element>
         <sd:compositeElement id="desktopTitleWrapper" tag="div">
            <!-- <sd:element tag="h1" elementStyle="applicationTitle">DesktopConfigurator.desktopTitle</sd:element> -->
            <sd:element tag="h2" elementStyle="tagline">DesktopConfigurator.desktopSubTitle</sd:element>
         </sd:compositeElement>
      </sd:compositeElement>
      
      <sd:compositeElement tag="div" id="desktopNavigationBar">
         <sd:compositeElement id="navigationBarWrapper" tag="div">
            <sd:element tag="div" id="HorizontalMenuBar">
               <sd:plugin>
                  <sd:resources>
                     <sd:styleSheets>
                        <sd:styleSheet>Desktops/ProcessPuzzle/Styles/HorizontalMenuLayout.css</sd:styleSheet>
                     </sd:styleSheets>
                  </sd:resources>
                  <sd:widget name="HierarchicalMenuWidget">
                     <sd:options>
                        <sd:option name="componentName" value="'horizontalMenuBar'"/>
                        <sd:option name="widgetContainerId" value="'HorizontalMenuBar'"/>
                        <sd:option name="widgetDataURI" value="'Configuration/WebUIMenuDefinition.xml'"/>
                        <sd:option name="widgetDefinitionURI" value="'Desktops/ProcessPuzzle/Widgets/MenuWidgetDefinition.xml'" />
                     </sd:options>
                  </sd:widget>
               </sd:plugin>
            </sd:element>
            <sd:element tag="div" id="LanguageSelectorWidget">
               <sd:plugin>
                  <sd:resources>
                     <sd:styleSheets>
                        <sd:styleSheet>Desktops/ProcessPuzzle/Styles/LanguageSelectorWidget.css</sd:styleSheet>
                     </sd:styleSheets>
                  </sd:resources>
                  <sd:widget name="LanguageSelectorWidget">
                     <sd:options>
                        <sd:option name="widgetContainerId" value="'LanguageSelectorWidget'"/>
                     </sd:options>
                  </sd:widget>
               </sd:plugin>
            </sd:element>
         </sd:compositeElement>
      </sd:compositeElement>
   </sd:documentBody>
</sd:smartDocumentDefinition>
