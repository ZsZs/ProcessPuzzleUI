<?xml version="1.0" encoding="UTF-8"?>
<pp:desktopConfiguration 
	xmlns:pp="http://www.processpuzzle.com"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.processpuzzle.com/ http://www.processpuzzle.com/Schemas/DesktopConfiguration.xsd">

	<name>ProcessPuzzle</name>
	<version>1.0</version>
	<description>This is full flagged desktop configuration.</description>
   <containerId>desktop</containerId>

	<resources>
		<styleSheets>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Content.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Core.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Dock.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Layout.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Panels.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Tabs.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Window.css</styleSheet>
		</styleSheets>
		<images></images>
		<javaScripts></javaScripts>
	</resources>
	
	<header tag="div" id="desktopHeader">
		<titleBar tag="div" id="desktopTitleBar">
         <element tag="div" id="desktopTitleLogo"></element>
			<compositeElement id="desktopTitleWrapper" tag="div">
			   <!-- <element tag="h1" elementStyle="applicationTitle">DesktopConfigurator.desktopTitle</element> -->
				<element tag="h2" elementStyle="tagline">DesktopConfigurator.desktopSubTitle</element>
			</compositeElement>
		</titleBar>
		
		<navigationBar tag="div" id="desktopNavigationBar">
			<compositeElement id="navigationBarWrapper" tag="div">
				<element tag="div" id="HorizontalMenuBar">
					<plugin name="HorizontalMenu">
                  <resources>
                     <styleSheets>
                        <styleSheet>Desktops/ProcessPuzzle/Styles/HorizontalMenuLayout.css</styleSheet>
                     </styleSheets>
                  </resources>
						<onLoad>function(){ return new HierarchicalMenuWidget({ widgetContainerId : 'HorizontalMenuBar', widgetDefinitionURI : 'Configuration/WebUIMenuDefinition.xml', componentName : 'HorizontalMenuBar' }).construct();}</onLoad>
					</plugin>
				</element>
				<element tag="div" id="LanguageSelectorWidget">
					<plugin name="LanguageSelector">
                  <resources>
                     <styleSheets>
                        <styleSheet>Desktops/ProcessPuzzle/Styles/LanguageSelectorWidget.css</styleSheet>
                     </styleSheets>
                  </resources>
						<onLoad>function(){ return new LanguageSelectorWidget({ widgetContainerId : 'LanguageSelectorWidget'}).construct();}</onLoad>
					</plugin>
				</element>
			</compositeElement>
		</navigationBar>
	</header>
	
   <windowDocker tag="div" id="dockWrapper"></windowDocker>
   
   <contentArea tag="div" id="pageWrapper"></contentArea>
   
   <footer tag="div" id="desktopFooterWrapper">
      <footerBar tag="div" id="desktopFooter">
         <element tag="div" elementStyle="footerText" href="http://processpuzzle.com">DesktopConfigurator.footerText</element>
         <element tag="div" id="SkinSelectorWidget">
            <plugin name="SkinSelector">
               <resources>
                  <styleSheets>
                     <styleSheet>Desktops/ProcessPuzzle/Styles/SkinSelectorWidget.css</styleSheet>
                  </styleSheets>
               </resources>
               <onLoad>function(){ return new SkinSelectorWidget({ widgetContainerId : 'SkinSelectorWidget'}).construct();}</onLoad>
            </plugin>
         </element>
      </footerBar>
   </footer>
   
	<columns>
		<column name='leftColumn' placement='left' width='200' minimumWidth='200' maximumWidth='200' />
		<column name='mainColumn' placement='main' minimumWidth='100' maximumWidth='300' />
		<column name='rightColumn' placement='right' width='220' minimumWidth='200' maximumWidth='300' />
	</columns>
	
	<panels>
		<panel name='menuPanel' columnReference='leftColumn'>
			<title>DesktopConfigurator.Panel.contentBrowserTitle</title>
         <contentURL>Desktops/ProcessPuzzle/Pages/VerticalMenuColumn.html</contentURL>
			<plugin name="VerticalMenu">
            <resources>
               <styleSheets>
                  <styleSheet>Desktops/ProcessPuzzle/Styles/VerticalMenuLayout.css</styleSheet>
               </styleSheets>
            </resources>
            <onLoad>function(){ return new HierarchicalMenuWidget({ widgetContainerId : 'VerticalMenuColumn', widgetDefinitionURI : 'Configuration/WebUIMenuDefinition.xml', contextItemId : 'YourMenu', componentName : 'VerticalMenuColumn', subscribeToWebUIMessages : [MenuSelectedMessage] }).construct();}</onLoad>
			</plugin>
		</panel>
		
		<panel name='who-is-in' columnReference='leftColumn' height='100' showHeader='true'>
			<title>DesktopConfigurator.Panel.whoIsIn</title>
		</panel>
		
		<panel name='documents-panel' columnReference='mainColumn' showHeader='true'>
			<title>DesktopConfigurator.Panel.documentsTitle</title>
			<contentURL>Desktops/ProcessPuzzle/Pages/Welcome_hu.html</contentURL>
		</panel>
		
		<panel name='consolePanel' columnReference='mainColumn' height='100' showHeader='true'>
			<title>DesktopConfigurator.Panel.consoleTitle</title>
         <panelHeader toolBoxUrl="Desktops/ProcessPuzzle/Pages/EmptyToolboxContent.html">
            <plugin name="ConsoleTabs">
               <resources>
                  <styleSheets>
                     <styleSheet>Desktops/ProcessPuzzle/Styles/ConsoleTabs.css</styleSheet>
                  </styleSheets>
               </resources>
               <onLoad>function() { return new TabWidget({ widgetContainerId : 'consolePanel_headerToolbox', widgetDefinitionURI : 'JavaScript/Source/TabWidget/TabsDefinition.xml'}).construct(); }</onLoad> 
            </plugin>
         </panelHeader>
		</panel>
		
		<panel name='eventsPanel' columnReference='rightColumn' showHeader='true' >
			<title>DesktopConfigurator.Panel.menusTitle</title>
		</panel>
		
		<panel name='newsPanel' columnReference='rightColumn' height='150' showHeader='true'>
			<title>DesktopConfigurator.Panel.tipsTitle</title>
		</panel>
	</panels>
	
</pp:desktopConfiguration>