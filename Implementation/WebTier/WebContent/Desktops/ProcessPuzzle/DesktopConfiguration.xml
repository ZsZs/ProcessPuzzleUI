<?xml version="1.0" encoding="UTF-8"?>
<desktopConfiguration 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:pp="http://www.processpuzzle.com"
   xmlns:dc="http://www.processpuzzle.com/DesktopConfiguration"
   xsi:noNamespaceSchemaLocation="file:///e:/GitRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/DesktopConfiguration.xsd">

	<name>ProcessPuzzle</name>
	<version>1.0</version>
	<description>This is full flagged desktop configuration.</description>
   <containerId>desktop</containerId>

	<resources>
		<styleSheets>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Content.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Core.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Dock.css</styleSheet>
         <styleSheet>Desktops/ProcessPuzzle/Styles/Form.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Layout.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Panels.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Tabs.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Window.css</styleSheet>
         <styleSheet>Desktops/ProcessPuzzle/Styles/PhotoGalery.css</styleSheet>
		</styleSheets>
		<images></images>
		<javaScripts></javaScripts>
	</resources>
	
   <header documentDefinition="Desktops/ProcessPuzzle/DesktopHeader.xml"/>
	
   <windowDocker tag="div" id="dockWrapper"></windowDocker>
   
   <contentArea tag="div" id="pageWrapper"></contentArea>
   
   <footer documentDefinition="Desktops/ProcessPuzzle/DesktopFooter.xml"/>
   
	<columns>
		<column name='leftColumn' placement='left' width='200' minimumWidth='200' maximumWidth='200' />
		<column name='mainColumn' placement='main' minimumWidth='100' maximumWidth='300' />
		<column name='rightColumn' placement='right' width='300' minimumWidth='200' maximumWidth='400' />
	</columns>
	
	<panels>
		<panel name='menuPanel' columnReference='leftColumn'>
			<title>DesktopConfigurator.Panel.contentBrowserTitle</title>
         <contentURL>Desktops/ProcessPuzzle/Pages/VerticalMenuColumn.html</contentURL>
			<plugin>
            <resources>
               <styleSheets>
                  <styleSheet>Desktops/ProcessPuzzle/Styles/VerticalMenuLayout.css</styleSheet>
               </styleSheets>
            </resources>
            <widget name="HierarchicalMenuWidget">
               <options>
                  <option name="widgetContainerId" value="'VerticalMenuColumn'"/>
                  <option name="widgetDefinitionURI" value="'Configuration/WebUIMenuDefinition.xml'"/>
                  <option name="contextItemId" value="'YourMenu'"/>
                  <option name="componentName " value="'verticalMenuColumn'"/>
                  <option name="subscribeToWebUIMessages " value="[MenuSelectedMessage]"/>
               </options>
            </widget>
			</plugin>
		</panel>
		
		<panel name='who-is-in' columnReference='leftColumn' height='100' showHeader='true'>
			<title>DesktopConfigurator.Panel.whoIsIn</title>
		</panel>
		
		<panel name='documents-panel' columnReference='mainColumn' showHeader='true' handleMenuSelectedEvents="true" storeState="false">
			<title>DesktopConfigurator.Panel.documentsTitle</title>
		</panel>
		
		<panel name='consolePanel' columnReference='mainColumn' height='100' showHeader='true' handleTabSelectedEvents="true" storeState="false">
			<title>DesktopConfigurator.Panel.consoleTitle</title>
         <panelHeader>
            <plugin>
               <resources>
                  <styleSheets>
                     <styleSheet>Desktops/ProcessPuzzle/Styles/ConsoleTabs.css</styleSheet>
                  </styleSheets>
               </resources>
               <widget name="TabWidget">
                  <options>
                     <option name="componentName " value="'consoleTabs'"/>
                     <option name="widgetContainerId" value="'consolePanel_headerToolbox'"/>
                     <option name="widgetDefinitionURI" value="'Configuration/ConsoleTabsDefinition.xml'"/>
                  </options>
               </widget> 
            </plugin>
         </panelHeader>
		</panel>
		
		<panel name='eventsPanel' columnReference='rightColumn' showHeader='true' >
			<title>DesktopConfigurator.Panel.menusTitle</title>
		</panel>
		
		<panel name='newsPanel' columnReference='rightColumn' height='150' showHeader='true'>
			<title>DesktopConfigurator.Panel.tipsTitle</title>
		</panel>
	</panels>
	
   <windows>
      <window/>
   </windows>
</desktopConfiguration>