<?xml version="1.0" encoding="UTF-8"?>
<pp:desktopConfiguration 
	xmlns:pp="http://www.processpuzzle.com"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.processpuzzle.com/ http://www.processpuzzle.com/Schemas/DesktopConfiguration.xsd">

	<name>DesktopConfiguration</name>
	<version>1.0</version>
	<description>This is full flagged desktop configuration.</description>
   <containerId>desktop</containerId>

	<resources>
		<styleSheets>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Content.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Core.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Dock.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Layout.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Panels.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Tabs.css</styleSheet>
			<styleSheet>Desktops/ProcessPuzzle/Styles/Window.css</styleSheet>
		</styleSheets>
		<images></images>
		<scripts></scripts>
	</resources>
	
	<header tag="div" id="desktopHeader">
		<titleBar tag="div" id="desktopTitleBar">
			<elements>
				<element tag="h1" class="applicationTitle">DesktopConfigurator.desktopTitle</element>
				<element tag="h2" class="tagline">DesktopConfigurator.desktopSubTitle</element>
			</elements>
		</titleBar>
		
		<navigationBar tag="div" id="desktopNavigationBar">
			<elements>
				<element tag="div" id="HorizontalMenuBar">
					<plugin>
                  <resources>
                     <styleSheets>
                        <styleSheet>Desktops/ProcessPuzzle/Styles/HorizontalMenuLayout.css</styleSheet>
                     </styleSheets>
                  </resources>
						<onLoad>function(){ return new HierarchicalMenuWidget({ widgetContainerId : 'HorizontalMenuBar', widgetDefinitionURI : 'Configuration/WebUIMenuDefinition.xml', componentName : 'HorizontalMenuBar' }).configure();}</onLoad>
					</plugin>
				</element>
				<element tag="div" id="LanguageSelectorWidget">
					<plugin>
                  <resources>
                     <styleSheets>
                        <styleSheet>Desktops/ProcessPuzzle/Styles/LanguageSelectorWidget.css</styleSheet>
                     </styleSheets>
                  </resources>
						<onLoad>function(){ return new LanguageSelectorWidget({ widgetContainerId : 'LanguageSelectorWidget'}).configure();}</onLoad>
					</plugin>
				</element>
			</elements>
		</navigationBar>
	</header>
	
   <windowDocker tag="div" id="dockWrapper"></windowDocker>
   
   <contentArea tag="div" id="pageWrapper"></contentArea>
   
   <footer tag="div" id="desktopFooterWrapper">
      <footerBar tag="div" id="desktopFooter">
         <elements>
            <element tag="div" class="footerText" href="http://processpuzzle.com">DesktopConfigurator.footerText</element>
            <element tag="div" id="SkinSelectorWidget">
               <plugin>
                  <resources>
                     <styleSheets>
                        <styleSheet>Desktops/ProcessPuzzle/Styles/SkinSelectorWidget.css</styleSheet>
                     </styleSheets>
                  </resources>
                  <onLoad>function(){ return new SkinSelectorWidget({ widgetContainerId : 'SkinSelectorWidget'}).configure();}</onLoad>
               </plugin>
            </element>
         </elements>
      </footerBar>
   </footer>
   
	<columns>
		<column name='leftColumn' placement='left' width='200' minimumWidth='200' maximumWidth='200' />
		<column name='mainColumn' placement='main' minimumWidth='100' maximumWidth='300' />
		<column name='rightColumn' placement='right' width='220' minimumWidth='200' maximumWidth='300' />
	</columns>
	
	<panels>
		<panel name='content-browser' columnReference='leftColumn'>
			<title>DesktopConfigurator.Panel.contentBrowserTitle</title>
			<contentURL>Desktops/ProcessPuzzle/Pages/ContentBrowser.html</contentURL>
			<plugin>
            <resources>
               <styleSheets>
                  <styleSheet>Desktops/ProcessPuzzle/Styles/VerticalMenuLayout.css</styleSheet>
               </styleSheets>
            </resources>
            <onLoad>function(){ return new HierarchicalMenuWidget({ widgetContainerId : 'VerticalMenuColumn', widgetDefinitionURI : 'Configuration/WebUIMenuDefinition.xml', contextItemId : 'YourMenu', componentName : 'VerticalMenuColumn', subscribeToWebUIMessages : [MenuSelectedMessage] }).configure();}</onLoad>
			</plugin>
		</panel>
		
		<panel name='who-is-in' columnReference='leftColumn' height='100'>
			<title>DesktopConfigurator.Panel.whoIsIn</title>
		</panel>
		
		<panel name='documents-panel' columnReference='mainColumn' >
			<title>DesktopConfigurator.Panel.documentsTitle</title>
			<contentURL>Desktops/ProcessPuzzle/Pages/Welcome_hu.html</contentURL>
			<panelHeader>
				<plugin>
               <resources>
                  <styleSheets>
                     <styleSheet>Desktops/ProcessPuzzle/Styles/DocumentSelector.css</styleSheet>
                  </styleSheets>
               </resources>
   				<onLoad>function() { return new TabWidget({ widgetContainerId : 'documents-panel_headerToolbox', widgetDefinitionURI : 'Commons/JavaScript/TabWidget/TabsDefinition.xml'}).configure();</onLoad> 
				</plugin>
			</panelHeader>
		</panel>
		
		<panel name='console' columnReference='mainColumn' height='100'>
			<title>DesktopConfigurator.Panel.consoleTitle</title>
		</panel>
		
		<panel name='menu-panel' columnReference='rightColumn' >
			<title>DesktopConfigurator.Panel.menusTitle</title>
		</panel>
		
		<panel name='tips-panel' columnReference='rightColumn' height='150'>
			<title>DesktopConfigurator.Panel.tipsTitle</title>
		</panel>
	</panels>
	
</pp:desktopConfiguration>