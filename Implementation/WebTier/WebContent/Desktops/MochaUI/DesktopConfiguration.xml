<?xml version="1.0" encoding="UTF-8"?>
<pp:desktopConfiguration 
	xmlns:pp="http://www.processpuzzle.com"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.processpuzzle.com/ http://www.processpuzzle.com/Schemas/DesktopConfiguration.xsd" >

	<name>MochaUI Desktop</name>
	<version>1.0</version>
	<description>This is full flagged desktop configuration.</description>
   <containerId>desktop</containerId>

	<resources>
		<styleSheets>
			<styleSheet>Desktops/MochaUI/Styles/Core.css</styleSheet>
			<styleSheet>Desktops/MochaUI/Styles/Content.css</styleSheet>
			<styleSheet>Desktops/MochaUI/Styles/Dock.css</styleSheet>
			<styleSheet>Desktops/MochaUI/Styles/Layout.css</styleSheet>
			<styleSheet>Desktops/MochaUI/Styles/Panels.css</styleSheet>
			<styleSheet>Desktops/MochaUI/Styles/Tabs.css</styleSheet>
			<styleSheet>Desktops/MochaUI/Styles/Window.css</styleSheet>
		</styleSheets>
		<images></images>
		<scripts></scripts>
	</resources>
	
	<header tag="div" id="desktopHeader">
		<titleBar tag="div" id="desktopTitleBar">
			<compositeElement id="desktopTitlebarWrapper">
				<element tag="h1" elementStyle="applicationTitle">DesktopConfigurator.desktopTitle</element>
				<element tag="h2" elementStyle="tagline">DesktopConfigurator.desktopSubTitle</element>
			</compositeElement>
		</titleBar>
		
		<navigationBar tag="div" id="desktopNavigationBar">
			<compositeElement>
				<element tag="div" id="HorizontalMenuBar">
					<plugin>
                  <resources>
                     <styleSheets><styleSheet>Desktops/MochaUI/Styles/HorizontalMenuLayout.css</styleSheet></styleSheets>
                  </resources>
						<onLoad>function(){ return new HierarchicalMenuWidget({ widgetContainerId : 'HorizontalMenuBar', widgetDefinitionURI : 'Configuration/WebUIMenuDefinition.xml', componentName : 'HorizontalMenuBar', showSubItems : true }).configure();}</onLoad>
					</plugin>
				</element>
				<element tag="div" id="LanguageSelectorWidget">
					<plugin>
                  <resources>
                     <styleSheets><styleSheet>Desktops/MochaUI/Styles/LanguageSelectorWidget.css</styleSheet></styleSheets>
                  </resources>
						<onLoad>function(){ new LanguageSelectorWidget({ widgetContainerId : 'LanguageSelectorWidget'}).configure();}</onLoad>
					</plugin>
				</element>
			</compositeElement>
		</navigationBar>
	</header>
	
   <windowDocker tag="div" id="dockWrapper"></windowDocker>

   <contentArea tag="div" id="pageWrapper"></contentArea>

   <footer tag="div" id="desktopFooterWrapper">
      <footerBar tag="div" id="desktopFooter">
         <compositeElement>
            <element tag="div" elementStyle="footerText" href="http://processpuzzle.com">DesktopConfigurator.footerText</element>
            <element tag="div" id="SkinSelectorWidget">
               <plugin>
                  <resources>
                     <styleSheets><styleSheet>Desktops/MochaUI/Styles/SkinSelectorWidget.css</styleSheet></styleSheets>
                  </resources>
                  <onLoad>function(){ return new SkinSelectorWidget({ widgetContainerId : 'SkinSelectorWidget'}).configure();}</onLoad>
               </plugin>
            </element>
         </compositeElement>
      </footerBar>
   </footer>
   
	<columns>
		<column name='mainColumn' placement='main' minimumWidth='100' maximumWidth='300' />
		<column name='rightColumn' placement='right' width='220' minimumWidth='200' maximumWidth='300' />
	</columns>
	
	<panels>
		<panel name='documents-panel' columnReference='mainColumn' showHeader='true'>
			<title>DesktopConfigurator.Panel.documentsTitle</title>
			<contentURL>Desktops/MochaUI/Pages/Welcome_hu.html</contentURL>
		</panel>
		
		<panel name='console' columnReference='mainColumn' height='100' showHeader='true'>
			<title>DesktopConfigurator.Panel.consoleTitle</title>
		</panel>
		
		<panel name='menu-panel' columnReference='rightColumn' showHeader='true'>
			<title>DesktopConfigurator.Panel.menusTitle</title>
		</panel>
		
		<panel name='tips-panel' columnReference='rightColumn' height='150' showHeader='true'>
			<title>DesktopConfigurator.Panel.tipsTitle</title>
		</panel>
	</panels>
	
</pp:desktopConfiguration>