<?xml version="1.0" encoding="UTF-8"?>
<smartDocumentDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:pp="http://www.processpuzzle.com" 
   xmlns:sd="http://www.processpuzzle.com/SmartDocument" 
   xsi:noNamespaceSchemaLocation="file:///e:/GitRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/SmartDocument.xsd">
   <name>Desktop Header Document</name>
   <description>Header part of MochaUI desktop.</description>
   <version>0.5</version>
   
   <resources>
      <styleSheets></styleSheets>
      <images></images>
      <javaScripts></javaScripts>
   </resources>

   <documentBody tag="div" id="desktopHeader">
      <compositeElement tag="div" id="desktopTitleBar">
         <compositeElement id="desktopTitlebarWrapper" tag="div">
            <element tag="h1" elementStyle="applicationTitle">DesktopConfigurator.desktopTitle</element>
            <element tag="h2" elementStyle="tagline">DesktopConfigurator.desktopSubTitle</element>
         </compositeElement>
      </compositeElement>
      
      <compositeElement tag="div" id="desktopNavigationBar">
         <compositeElement>
            <element tag="div" id="HorizontalMenuBar">
               <plugin>
                  <resources>
                     <styleSheets><styleSheet>Desktops/MochaUI/Styles/HorizontalMenuLayout.css</styleSheet></styleSheets>
                  </resources>
                  <widget name="HierarchicalMenuWidget">
                     <options>
                        <option name="componentName" value="'horizontalMenuBar'" />
                        <option name="showSubItems" value="true" />
                        <option name="widgetContainerId" value="'HorizontalMenuBar'" />
                        <option name="widgetDataURI" value="'Configuration/WebUIMenuDefinition.xml'" />
                        <option name="widgetDefinitionURI" value="'Desktops/MochaUI/Widgets/MenuWidgetDefinition.xml'" />
                     </options>
                  </widget>
               </plugin>
            </element>
            <element tag="div" id="LanguageSelectorWidget">
               <plugin>
                  <resources>
                     <styleSheets><styleSheet>Desktops/MochaUI/Styles/LanguageSelectorWidget.css</styleSheet></styleSheets>
                  </resources>
                  <widget name="LanguageSelectorWidget">
                     <options>
                        <option name="widgetContainerId" value="'LanguageSelectorWidget'" />
                     </options>
                  </widget>
               </plugin>
            </element>
         </compositeElement>
      </compositeElement>
   </documentBody>
</smartDocumentDefinition>
