<?xml version="1.0" encoding="UTF-8"?>
<pp:menuWidgetDefinition
	xmlns:pp="http://www.processpuzzle.com"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	
	<menuWidget selectedItemClass="selectedMenuItem" />
	
	<menuItem menuItemId="MenuWidget">
		<menuItem menuItemId="YourMenu" caption="HierarchicalMenuWidget.documentExamples" isDefault="true">
			<messageProperties>{actionType : 'loadMenu', contextItemId : 'YourMenu'}</messageProperties>
					
         <menuItem menuItemId="YourMenu-Html" caption="HierarchicalMenuWidget.documentExamples.htmlContent" isDefault="true">
            <messageProperties>{ actionType : 'loadDocument', documentURI : 'Content/HtmlDocument', documentType : SmartDocument.Types.HTML }</messageProperties>         
         </menuItem>       
               
			<menuItem menuItemId="YourMenu-Static" caption="HierarchicalMenuWidget.documentExamples.staticDocument" isDefault="false">
				<messageProperties>{ actionType : 'loadDocument', documentURI : 'Content/StaticDocument.xml', documentType : SmartDocument.Types.SMART }</messageProperties>			
			</menuItem>			
               
         <menuItem menuItemId="YourMenu-Dynamic" caption="HierarchicalMenuWidget.documentExamples.dynamicDocument" isDefault="false">
            <messageProperties>{ actionType : 'loadDocument', documentURI : 'Content/DynamicDocument.xml', documentContentURI : 'Content/DynamicContent', documentType : SmartDocument.Types.SMART }</messageProperties>         
         </menuItem>
         
         <menuItem menuItemId="YourMenu-PhotoAlbum" caption="HierarchicalMenuWidget.documentExamples.photoAlbum" isDefault="false">
            <messageProperties>{ actionType : 'loadDocument', documentURI : 'Content/PhotoGaleryDocument.xml', documentType : SmartDocument.Types.SMART }</messageProperties>         
         </menuItem>
         
         <menuItem menuItemId="YourMenu-VideoAlbum" caption="HierarchicalMenuWidget.documentExamples.videoAlbum" isDefault="false">
            <messageProperties>{ actionType : 'loadDocument', documentURI : 'Content/VideoGaleryDocument.xml', documentType : SmartDocument.Types.SMART }</messageProperties>         
         </menuItem>       
		</menuItem>
		
		<menuItem menuItemId="Administration" caption="HierarchicalMenuWidget.administration">
			<messageProperties>{actionType : 'loadMenu', contextItemId : 'Administration'}</messageProperties>
					
			<menuItem menuItemId="Administration-Users" caption="HierarchicalMenuWidget.administration.users" isDefault="true">
				<messageProperties>{actionType : 'loadDocument', documentURI : 'Commons/BusinessImplementation/SystemAdministration/UserList_ListView.jsp'}</messageProperties>			
			</menuItem>
						
		</menuItem>
	</menuItem>
</pp:menuWidgetDefinition>