<?xml version="1.0" encoding="UTF-8"?>
<tb:toolBarDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:pp="http://www.processpuzzle.com"
   xmlns:tb="http://www.processpuzzle.com/ToolBar"
   xsi:schemaLocation="http://www.processpuzzle.com/ToolBar http://processpuzzle.com/Schemas/DesktopToolBar.xsd">
   
   <tb:name>DocumentEditorToolBar</tb:name>
   <tb:description>Provides user interface for editing smart documents</tb:description>
   
   <tb:buttons elementStyle="toolBar">
      <tb:button name="bold">
         <tb:caption>DocumentEditorToolBar.bold</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/bold.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.BOLD }</pp:messageProperties>         
      </tb:button>
      
      <tb:button name="italic">
         <tb:caption>DocumentEditorToolBar.italic</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/italic.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.ITALIC }</pp:messageProperties>         
      </tb:button>
      
      <tb:button name="underline">
         <tb:caption>DocumentEditorToolBar.underline</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/underline.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.UNDERLINE }</pp:messageProperties>         
      </tb:button>
      
      <tb:button name="strikethrough">
         <tb:caption>DocumentEditorToolBar.strikethrough</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/strikethrough.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.STRIKETHROUGH }</pp:messageProperties>         
      </tb:button>
      
      <tb:divider/>
      
      <tb:button name="unorderedList">
         <tb:caption>DocumentEditorToolBar.unorderedList</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/insertunorderedlist.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.UNORDERED_LIST }</pp:messageProperties>         
      </tb:button>
      
      <tb:button name="orderedList">
         <tb:caption>DocumentEditorToolBar.orderedList</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/insertorderedlist.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.ORDERED_LIST }</pp:messageProperties>         
      </tb:button>
      
      <tb:button name="indent">
         <tb:caption>DocumentEditorToolBar.indent</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/indent.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.INDENT }</pp:messageProperties>         
      </tb:button>
      
      <tb:button name="outdent">
         <tb:caption>DocumentEditorToolBar.outdent</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/outdent.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.OUTDENT }</pp:messageProperties>         
      </tb:button>
      
      <tb:divider/>
      
      <tb:button name="alignLeft">
         <tb:caption>DocumentEditorToolBar.alignLeft</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/justifyleft.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.ALIGN_LEFT }</pp:messageProperties>         
      </tb:button>
      
      <tb:button name="alignCenter">
         <tb:caption>DocumentEditorToolBar.alignCenter</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/justifycenter.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.ALIGN_CENTER }</pp:messageProperties>         
      </tb:button>
      
      <tb:button name="alignRight">
         <tb:caption>DocumentEditorToolBar.alignRight</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/justifyright.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.ALIGN_RIGHT }</pp:messageProperties>         
      </tb:button>
      
