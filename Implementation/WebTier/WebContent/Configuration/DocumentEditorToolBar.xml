         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.ADD_LINK }</pp:messageProperties>         
      </tb:button>
      
      <tb:button name="removeLink">
         <tb:caption>DocumentEditorToolBar.removeLink</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/unlink.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.REMOVE_LINK }</pp:messageProperties>         
      </tb:button>
      
      <tb:button name="addImage">
         <tb:caption>DocumentEditorToolBar.addImage</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/urlimage.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.ADD_IMAGE }</pp:messageProperties>         
      </tb:button>
      
      <tb:button name="toggleView">
         <tb:caption>DocumentEditorToolBar.toggleView</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/toggleview.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.TOGGLE_VIEW }</pp:messageProperties>         
      </tb:button>
   </tb:buttons>
</tb:toolBarDefinition>
