      </tb:button>
      
      <tb:divider/>
      
      <tb:button name="undo">
         <tb:caption>DocumentEditorToolBar.undo</tb:caption>
         <tb:iconImage>Desktops/Images/TextEditor/undo.png</tb:iconImage>
         <pp:messageProperties>{ activityType : AbstractDocument.Activity.MODIFY_DOCUMENT, actionType : AbstractDocument.Action.UNDO }</pp:messageProperties>         
      </tb:button>
      
      <tb:button name="redo">
