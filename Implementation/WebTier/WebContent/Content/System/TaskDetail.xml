<?xml version="1.0" encoding="UTF-8"?>
<smartDocumentDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:pp="http://www.processpuzzle.com" 
   xmlns:sd="http://www.processpuzzle.com/SmartDocument" 
   xsi:noNamespaceSchemaLocation="file:///e:/GitRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/SmartDocument.xsd">
   <name>Event Detail</name>
   <description>Presents all the details of a single event.</description>
   <version>0.5</version>
   <contentUri>Content/Workflow.xml</contentUri>
   
   <resources>
      <styleSheets></styleSheets>
      <images></images>
      <javaScripts></javaScripts>
   </resources>

   <documentBody tag="div" id="eventDocumentBody">
      <compositeDataElement tag="div" id="activityWrapper" bind="//pp:workflow/workflowDetail[{workflowDetailIndex}]/activities/activity[{activityIndex}]" indexVariable="activityIndex" maxOccures="1">
         <dataElement tag="h1" elementStyle="title" id="itemTitle" bind="//pp:workflow/workflowDetail[{workflowDetailIndex}]/activities/activity[{activityIndex}]/name"/>
         <dataElement tag="p" elementStyle="description" id="itemDescription" bind="//pp:workflow/workflowDetail[{workflowDetailIndex}]/activities/activity[{activityIndex}]/description"/>
         <formElement id="eventProperties" method="post" bind="//pp:workflow/workflowDetail[{workflowDetailIndex}]/activities/activity[{activityIndex}]">
            <formField id="duration" label="Workflow.ActivityDetail.duration" bind="//pp:workflow/workflowDetail[{workflowDetailIndex}]/activities/activity[{activityIndex}]/duration"/>
            <formField id="duration" label="Workflow.ActivityDetail.performerRole" bind="//pp:workflow/workflowDetail[{workflowDetailIndex}]/activities/activity[{activityIndex}]/performerRole"/>
            <formField id="duration" label="Workflow.ActivityDetail.performerParty" bind="//pp:workflow/workflowDetail[{workflowDetailIndex}]/activities/activity[{activityIndex}]/performerParty"/>
         </formElement>
      </compositeDataElement>
      <element tag="h4">Workflow.ActivityDetail.inputs</element>
      <tableElement id="inputsTableContainer" bind="//pp:workflow/workflowDetail[{workflowDetailIndex}]/activities/activity[{activityIndex}]/inputs/input[{inputIndex}]" indexVariable="inputIndex" maxOccures="unbounded">
         <tableColumn id="activityName" label="PersonalToDoList.activityName" bind="//pp:workflow/workflowDetail[{workflowDetailIndex}]/activities/activity[{activityIndex}]/inputs/input[{inputIndex}]"/>
      </tableElement>
      
      <element tag="h4">Workflow.ActivityDetail.outputs</element>
   </documentBody>
</smartDocumentDefinition>
