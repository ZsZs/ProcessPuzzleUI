<?xml version="1.0" encoding="UTF-8"?>
<smartDocumentDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:pp="http://www.processpuzzle.com" 
   xmlns:sd="http://www.processpuzzle.com/SmartDocument" 
   xsi:noNamespaceSchemaLocation="file:///e:/GitRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/SmartDocument.xsd">
   <name>Document Properties Document</name>
   <description>Shows the properties of the selected document.</description>
   <version>0.5</version>
   
   <resources>
      <styleSheets></styleSheets>
      <images></images>
      <javaScripts></javaScripts>
   </resources>

   <documentHeader tag="div" id="propertiesHeader">
      <compositeElement tag="div" id="headerWrapper">
         <element tag="h3">DocumentProperties.title</element>
      </compositeElement>
   </documentHeader>
   
   <documentBody tag="div" id="propertiesBody">
      <formElement id="documentProperties" method="post" bind="/documentProperties">
         <formField id="link" label="DocumentProperties.properties.uri" bind="/documentProperties/uri"/>
         <formField id="description" label="DocumentProperties.properties.title" bind="/documentProperties/title"/>
         <formField id="language" label="DocumentProperties.properties.subject" bind="/documentProperties/subject"/>
         <formField id="pubDate" label="DocumentProperties.properties.created" bind="/documentProperties/created"/>
         <formField id="lastBuildDate" label="DocumentProperties.properties.lastModified" bind="/documentProperties/lastModified"/>
      </formElement>
   </documentBody>   
</smartDocumentDefinition>
