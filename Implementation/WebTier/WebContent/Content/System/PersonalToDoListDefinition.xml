<?xml version="1.0" encoding="UTF-8"?>
<smartDocumentDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:pp="http://www.processpuzzle.com" 
   xmlns:sd="http://www.processpuzzle.com/SmartDocument" 
   xsi:noNamespaceSchemaLocation="file:///e:/GitRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/SmartDocument.xsd">
   <name>Personal To Do List</name>
   <description>To Do list of the logged in person.</description>
   <version>0.5</version>
   
   <resources>
      <styleSheets></styleSheets>
      <images></images>
      <javaScripts></javaScripts>
   </resources>

   <documentHeader tag="div" id="toDoListHeader">
      <compositeElement tag="div" id="headerWrapper">
         <element tag="h3">PersonalToDoList.title</element>
      </compositeElement>
   </documentHeader>
   
   <documentBody tag="div" id="toDoListBody">
      <tableElement id="toDoTableContainer" bind="//pp:workflow/workflowDetail/activities/activity[{index}]" maxOccures="unbounded">
         <tableColumn id="activityName" label="PersonalToDoList.activityName" bind="name"/>
         <tableColumn id="activityDescription" label="PersonalToDoList.activityDescription" bind="description"/>
         <tableColumn id="activityDuration" label="PersonalToDoList.activityDuration" bind="duration"/>
      </tableElement>
   </documentBody>   
</smartDocumentDefinition>
