<?xml version="1.0" encoding="UTF-8"?>
<smartDocumentDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:pp="http://www.processpuzzle.com" 
   xmlns:sd="http://www.processpuzzle.com/SmartDocument" 
   xsi:noNamespaceSchemaLocation="file:///e:/GitRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/SmartDocument.xsd">
   <name>Static Document</name>
   <description>Demonstrates static content of a Smart Document.</description>
   <version>0.5</version>
   <contentUri>Content/WidgetExamples/UpcommingEvents.xml</contentUri>
   
   <resources>
      <styleSheets></styleSheets>
      <images></images>
      <javaScripts></javaScripts>
   </resources>

   <documentBody tag="div" id="eventDocumentBody">
      <compositeDataElement tag="div" id="channelItemsContainer" bind="//pp:eventList/events/event[{index}]" maxOccures="1">
         <dataElement tag="h1" elementStyle="title" id="eventTitle" bind="//pp:eventList/events/event[{index}]/title"/>
         <dataElement tag="p" elementStyle="description" id="eventDescription" bind="//pp:eventList/events/event[{index}]/description"/>
      </compositeDataElement>
   </documentBody>
</smartDocumentDefinition>
