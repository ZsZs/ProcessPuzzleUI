<?xml version="1.0" encoding="UTF-8"?>
<smartDocumentDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:pp="http://www.processpuzzle.com" 
   xmlns:sd="http://www.processpuzzle.com/SmartDocument" 
   xsi:noNamespaceSchemaLocation="file:///e:/PublicRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/SmartDocument.xsd">
   <name>News Details</name>
   <description>Presents all the details of a single news.</description>
   <version>0.5</version>
   
   <resources>
      <styleSheets></styleSheets>
      <images></images>
      <javaScripts></javaScripts>
   </resources>

   <documentBody tag="div" id="newsDocumentBody">
      <dataElement tag="h1" elementStyle="title" id="itemTitle" bind="//rss/channel/item[{index}]/title"/>
      <compositeDataElement tag="div" id="channelItemsContainer" bind="//rss/channel/item[{index}]" maxOccures="unbounded">
         <dataElement tag="p" elementStyle="description" id="itemDescription" bind="//rss/channel/item[{index}]/description"/>
         <formElement id="newsProperties" method="post" bind="//rss/channel/item[{index}]">
            <formField id="publicationDate" label="NewsWidget.publicationDate" bind="//rss/channel/item[{index}]/pubDate"/>
            <formField id="link" label="NewsWidget.link" bind="//rss/channel/item[{index}]/guid"/>
         </formElement>
      </compositeDataElement>
   </documentBody>
   
</smartDocumentDefinition>
