<?xml version="1.0" encoding="UTF-8"?>
<desktopConfiguration 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:pp="http://www.processpuzzle.com"
   xmlns:dc="http://www.processpuzzle.com/DesktopConfiguration"
   xmlns:sd="http://www.processpuzzle.com/SmartDocument"
   xsi:schemaLocation="http://www.processpuzzle.com/SmartDocument http://processpuzzle.com/Schemas/DesktopConfiguration.xsd">

	<name>ProcessPuzzle</name>
	<version>1.0</version>
	<description>This is full flagged desktop configuration.</description>
	<containerId>desktopContainer</containerId>

	<sd:resources>
		<sd:styleSheets>
			<sd:styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Content.css</sd:styleSheet>
			<sd:styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Core.css</sd:styleSheet>
			<sd:styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Dock.css</sd:styleSheet>
			<sd:styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Layout.css</sd:styleSheet>
			<sd:styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Panels.css</sd:styleSheet>
			<sd:styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Tabs.css</sd:styleSheet>
			<sd:styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Window.css</sd:styleSheet>
		</sd:styleSheets>
		<sd:images></sd:images>
		<sd:javaScripts></sd:javaScripts>
	</sd:resources>
	
	<header documentDefinition="../Desktop/Skins/ProcessPuzzle/DesktopHeader.xml"/>
	
	<windowDocker tag="div" id="dockWrapper"/>
	
	<contentArea tag="div" id="pageWrapper"/>
	
	<footer documentDefinition="../Desktop/Skins/ProcessPuzzle/DesktopFooter.xml"/>
	
	<columns>
		<column name="leftColumn" placement="left" width="200" minimumWidth="100" maximumWidth="300"/>
		<column name="mainColumn" placement="main"/>
		<column name="rightColumn" placement="right" width="220" minimumWidth="200" maximumWidth="300"/>
	</columns>
	
	<panels>
		<panel name="documents-browser" columnReference="leftColumn" disableScrollBars="true" height="250">
			<title>DesktopConfigurator.Panel.contentBrowserTitle</title>
			<contentURL>../Desktop/Content/TreeView.html</contentURL>
		</panel>
		
		<panel name="documents-panel" 
		       columnReference="mainColumn" 
		       showHeader="true" 
		       height="400" 
		       handleMenuSelectedEvents="true" 
		       storeState="true"
		       storeStateInUri="true" 
		       eventOriginators="['horizontalMenuBar', 'verticalMenuColumn', 'webUIController']">
			<title>DesktopConfigurator.Panel.documentsTitle</title>
			<contentURL>../Desktop/Content/HelloWorldContent.html</contentURL>
         <panelHeader toolBoxUrl="../Desktop/EmptyToolboxContent.html">
            <plugin>
               <sd:resources>
                  <sd:styleSheets>
                     <sd:styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/DocumentToolBar.css</sd:styleSheet>
                  </sd:styleSheets>
                  <sd:javaScripts></sd:javaScripts>
               </sd:resources>
               <sd:widget name="ToolBarWidget">
                  <sd:options>
                     <sd:option name="widgetContainerId" value="'documents-panel_headerToolbox'"/>
                     <sd:option name="widgetDataURI" value="'../ToolBarWidget/ToolBarDefinition.xml'"/>
                     <sd:option name="widgetDefinitionURI" value="'../ToolBarWidget/ToolBarWidgetDefinition.xml'"/>
                  </sd:options>
               </sd:widget>
            </plugin>
         </panelHeader>
			<document tag="div" id="panelDocumentWrapper" elementStyle="panelDocumentWrapper" type="SmartDocument">
			    <documentDefinitionUri>../Desktop/SmartDocumentDefinition.xml</documentDefinitionUri>
			    <documentContentUri>../Desktop/SampleDocumentContent.xml</documentContentUri>
			</document>
		</panel>
		
		<panel name="console" columnReference="mainColumn" height="100" showHeader="true">
			<title>DesktopConfigurator.Panel.consoleTitle</title>
         <panelHeader toolBoxUrl="../Desktop/EmptyToolboxContent.html" contentStyle="DocumentTabs">
            <plugin>
               <sd:resources>
                  <sd:styleSheets>
                     <sd:styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/DocumentSelector.css</sd:styleSheet>
                  </sd:styleSheets>
               </sd:resources>
               <sd:widget name="TabWidget">
                  <sd:options>
                     <sd:option name="widgetContainerId" value="'console_headerToolbox'"/>
                     <sd:option name="widgetDataURI" value="'../TabWidget/TabsDefinition.xml'"/>
                     <sd:option name="widgetDefinitionURI" value="'../TabWidget/TabWidgetDefinition.xml'"/>
                  </sd:options>
               </sd:widget>
            </plugin>
         </panelHeader>
		</panel>
		
		<panel name="eventsPanel" columnReference="mainColumn" showHeader="true">
         <title>DesktopConfigurator.Panel.eventsTitle</title>
         <plugin>
            <sd:widget name="PartyEventWidget">
               <sd:options>
                  <sd:option name="widgetDataURI" value="'../PartyEventWidget/TestEvents.xml'"/>
                  <sd:option name="widgetDefinitionURI" value="'../PartyEventWidget/PartyEventWidgetDefinition.xml'"/>
               </sd:options>
            </sd:widget>
         </plugin>
		</panel>
		
      <panel name='newsPanel' columnReference='mainColumn' height='350' showHeader='true'>
         <title>DesktopConfigurator.Panel.newsTitle</title>
         <contentURL>../Desktop/NewsPanel.html</contentURL>
         <plugin>
            <sd:resources>
               <sd:styleSheets>
                  <sd:styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/NewsPanel.css</sd:styleSheet>
               </sd:styleSheets>
            </sd:resources>
            <sd:widget name="NewsReaderWidget">
               <sd:options>
                  <sd:option name="widgetContainerId" value="'TopNews'"/>
                  <sd:option name="widgetDataURI" value="'../NewsReaderWidget/TestNews.xml'"/>
                  <sd:option name="widgetDefinitionURI" value="'../NewsReaderWidget/NewsReaderDefinition.xml'"/>
                  <sd:option name="componentName" value="'NewsReaderWidget'"/>
                  <sd:option name="channelOptions" value="{ showDescription : false, showTitle : false, itemOptions : { truncateDescription : true }}"/>
               </sd:options>
            </sd:widget>
         </plugin>
      </panel>
      
		<panel name="tips-panel" columnReference="mainColumn" height="150" showHeader="true">
			<title>DesktopConfigurator.Panel.tipsTitle</title>
         <document tag="div" id="panelDocumentWrapper" elementStyle="panelDocumentWrapper" type="SmartDocument">
             <documentDefinitionUri>../Desktop/ErroneousDocumentDefinition.xml</documentDefinitionUri>
         </document>
		</panel>
	</panels>
	
	<windows>
      <window name="aboutDialog" height="300" width="500">
         <title>DesktopWindow.aboutDialog.title</title>
         <contentURL>../Desktop/Content/About.html</contentURL>
      </window>
      
		<window name="newDocumentDialog" height="400" width="600">
         <title>DesktopWindow.newDocumentDialog.title</title>
         <document tag="div" id="panelDocumentWrapper" elementStyle="panelDocumentWrapper" type="SmartDocument">
             <documentDefinitionUri>../Desktop/SmartDocumentDefinition.xml</documentDefinitionUri>
             <documentContentUri>../Desktop/SampleDocumentContent.xml</documentContentUri>
         </document>
      </window>
	</windows>
</desktopConfiguration>