<?xml version="1.0" encoding="UTF-8"?>
<desktopConfiguration 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:pp="http://www.processpuzzle.com"
   xmlns:dc="http://www.processpuzzle.com/DesktopConfiguration"
   xsi:noNamespaceSchemaLocation="file:///e:/GitRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/DesktopConfiguration.xsd">

	<name>ProcessPuzzle</name>
	<version>1.0</version>
	<description>This is full flagged desktop configuration.</description>
	<containerId>desktopContainer</containerId>
	<resources>
		<styleSheets>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Content.css</styleSheet>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Core.css</styleSheet>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Dock.css</styleSheet>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Layout.css</styleSheet>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Panels.css</styleSheet>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Tabs.css</styleSheet>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Window.css</styleSheet>
		</styleSheets>
		<images></images>
		<javaScripts></javaScripts>
	</resources>
	
	<header documentDefinition="../Desktop/Skins/ProcessPuzzle/DesktopHeader.xml"/>
	
	<windowDocker tag="div" id="dockWrapper"/>
	
	<contentArea tag="div" id="pageWrapper"/>
	
	<footer documentDefinition="../Desktop/Skins/ProcessPuzzle/DesktopFooter.xml"/>
	
	<columns>
		<column name="leftColumn" placement="left" width="200" minimumWidth="100" maximumWidth="300"/>
		<column name="mainColumn" placement="main"/>
		<column name="rightColumn" placement="right" width="220" minimumWidth="200" maximumWidth="300"/>
	</columns>
	
	<panels>
		<panel name="documents-browser" columnReference="leftColumn" height="250">
			<title>DesktopConfigurator.Panel.contentBrowserTitle</title>
			<contentURL>../Desktop/Content/TreeView.html</contentURL>
		</panel>
		
		<panel name="documents-panel" columnReference="mainColumn" showHeader="true" height="400" handleMenuSelectedEvents="true" storeState="true" eventOriginators="['horizontalMenuBar', 'verticalMenuColumn', 'webUIController']">
			<title>DesktopConfigurator.Panel.documentsTitle</title>
			<contentURL>../Desktop/Content/HelloWorldContent.html</contentURL>
         <panelHeader toolBoxUrl="../Desktop/EmptyToolboxContent.html">
            <plugin>
               <resources>
                  <styleSheets>
                     <styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/DocumentToolBar.css</styleSheet>
                  </styleSheets>
                  <javaScripts></javaScripts>
               </resources>
               <widget name="ToolBarWidget">
                  <options>
                     <option name="widgetContainerId" value="'documents-panel_headerToolbox'"/>
                     <option name="widgetDefinitionURI" value="'../ToolBarWidget/ToolBarDefinition.xml'"/>
                  </options>
               </widget>
            </plugin>
         </panelHeader>
			<document tag="div" id="panelDocumentWrapper" elementStyle="panelDocumentWrapper" type="SmartDocument">
			    <documentDefinitionUri>../Desktop/SmartDocumentDefinition.xml</documentDefinitionUri>
			    <documentContentUri>../Desktop/SampleDocumentContent.xml</documentContentUri>
			</document>
		</panel>
		
		<panel name="console" columnReference="mainColumn" height="100" showHeader="true">
			<title>DesktopConfigurator.Panel.consoleTitle</title>
         <panelHeader toolBoxUrl="../Desktop/EmptyToolboxContent.html">
            <plugin>
               <resources>
                  <styleSheets>
                     <styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/DocumentSelector.css</styleSheet>
                  </styleSheets>
                  <javaScripts></javaScripts>
               </resources>
               <widget name="TabWidget">
                  <options>
                     <option name="widgetContainerId" value="'console_headerToolbox'"/>
                     <option name="widgetDefinitionURI" value="'../TabWidget/TabsDefinition.xml'"/>
                  </options>
               </widget>
            </plugin>
         </panelHeader>
		</panel>
		
		<panel name="menu-panel" columnReference="rightColumn" showHeader="true">
			<title>DesktopConfigurator.Panel.menusTitle</title>
		</panel>
		
      <panel name='newsPanel' columnReference='mainColumn' height='350' showHeader='true'>
         <title>DesktopConfigurator.Panel.newsTitle</title>
         <contentURL>../Desktop/NewsPanel.html</contentURL>
         <plugin>
            <resources>
               <styleSheets>
                  <styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/NewsPanel.css</styleSheet>
               </styleSheets>
            </resources>
            <widget name="NewsReaderWidget">
               <options>
                  <option name="widgetContainerId" value="'TopNews'"/>
                  <option name="widgetDataURI" value="'../NewsReaderWidget/TestNews.xml'"/>
                  <option name="widgetDefinitionURI" value="'../NewsReaderWidget/NewsReaderDefinition.xml'"/>
                  <option name="componentName" value="'NewsReaderWidget'"/>
                  <option name="channelOptions" value="{ showDescription : false, showTitle : false, itemOptions : { truncateDescription : true }}"/>
               </options>
            </widget>
         </plugin>
      </panel>
      
		<panel name="tips-panel" columnReference="rightColumn" height="150" showHeader="true">
			<title>DesktopConfigurator.Panel.tipsTitle</title>
		</panel>
	</panels>
	
	<windows>
      <window name="aboutDialog" height="300" width="500">
         <title>DesktopWindow.aboutDialog.title</title>
         <contentURL>../Desktop/Content/About.html</contentURL>
      </window>
      
		<window name="newDocumentDialog" height="400" width="600">
         <title>DesktopWindow.newDocumentDialog.title</title>
         <document tag="div" id="panelDocumentWrapper" elementStyle="panelDocumentWrapper" type="SmartDocument">
             <documentDefinitionUri>../Desktop/SmartDocumentDefinition.xml</documentDefinitionUri>
             <documentContentUri>../Desktop/SampleDocumentContent.xml</documentContentUri>
         </document>
      </window>
	</windows>
</desktopConfiguration>