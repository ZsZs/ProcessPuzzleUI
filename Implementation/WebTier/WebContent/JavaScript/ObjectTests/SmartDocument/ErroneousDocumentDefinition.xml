<?xml version="1.0" encoding="UTF-8"?>
<smartDocumentDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:pp="http://www.processpuzzle.com" 
   xmlns:sd="http://www.processpuzzle.com/SmartDocument" 
   xsi:noNamespaceSchemaLocation="file:///e:/GitRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/SmartDocument.xsd">
   <name>Test Smart Document</name>
   <description>This configuration supports testing Smart Document.</description>
   <version>0.5</version>
   
   <resources>
      <styleSheets>
         <styleSheet>../SmartDocument/NoneExisting.css</styleSheet>
      </styleSheets>

      <images>
         <image id="logoImage" title="ProcessPuzzle">../SmartDocument/Images/NoneExistingImage.jpg</image>
      </images>
      
      <javaScripts>
         <javaScript>../SmartDocument/NoneExistingScript.js</javaScript>
      </javaScripts>
   </resources>

   <documentHeader tag="div" id="smartDocumentHeader">
      <compositeElement tag="div" id="headerWrapper">
         <element tag="h1" elementStyle="headerText" id="smartDocumentTitle" href="http://opensource.processpuzzle.com">SmartDocument.headerText</element>
      </compositeElement>
   </documentHeader>
   
   <documentBody tag="div" id="smartDocumentBody">
      <compositeElement tag="div" id="bodyWrapper">
         <dataElement tag="h3" id="currentUser" elementStyle="currentUser" source="../SmartDocument/UserProfile.xml" bind="/userProfile/userName[{index}]" minOccures="1" maxOccures="1" />
         <compositeElement tag="ul">SmartDocument.addresses
            <dataElement tag="li" id="userAddresses" source="../SmartDocument/UserProfile.xml" bind="/userProfile/addresses/address[{index}]" minOccures="0" maxOccures="unbounded" />
         </compositeElement>
         <element  tag="h4" id="channelItems">SmartDocument.itemsTitle</element>
      </compositeElement>

      <compositeElement tag="div" id="languageSelectorWrapper">
        <element tag="p" id="copyright" href="http://www.processpuzzle.com">SmartDocument.copyright</element>
        <element tag="div" id="languageSelector">
           <plugin>
              <resources>
                 <styleSheets>
                    <styleSheet>../LanguageSelectorWidget/LanguageSelectorWidget.css</styleSheet>
                 </styleSheets>
                 <images>
                    <image>../LanguageSelectorWidget/Images/SelectorBackground-Left.gif</image>
                    <image>../LanguageSelectorWidget/Images/SelectorBackground-Right.jpg</image>
                    <image>../SmartDocument/Images/NoneExistingImage.jpg</image>
                 </images>
                 <javaScripts>
                    <javaScript>../../Source/LanguageSelectorWidget/LanguageChangedMessage.js</javaScript>
                    <javaScript>../../Source/LanguageSelectorWidget/LanguageSelectorWidget.js</javaScript>
                 </javaScripts>
              </resources>
              <widget name="LanguageSelectorWidget">
                 <options>
                    <option name="widgetContainerId" value="'languageSelector'"/>
                 </options>
              </widget>
           </plugin>
        </element>
        <element id="skinSelector">
           <plugin>
             <widget name="SkinSelectorWidget">
                 <options>
                    <option name="widgetContainerId" value="'noneExistingElement'"/>
                 </options>
             </widget>
           </plugin>
        </element>
      </compositeElement>      
   </documentBody>
   
   <documentFooter tag="div" id="newsReaderFooter">
      <compositeElement tag="div" id="footerWrapper">
         <element tag="h1" elementStyle="footerText" href="http://opensource.processpuzzle.com">Visit Open Source ProcessPuzzle</element>
         <element tag="div" id="noneExistingWidget">
            <plugin>
               <widget name="NoneExistingWidget" />
            </plugin>
         </element>
      </compositeElement>
   </documentFooter>
</smartDocumentDefinition>
