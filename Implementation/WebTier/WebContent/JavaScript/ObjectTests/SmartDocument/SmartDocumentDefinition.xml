<?xml version="1.0" encoding="UTF-8"?>
<smartDocumentDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:pp="http://www.processpuzzle.com" 
   xmlns:sd="http://www.processpuzzle.com/SmartDocument" 
   xsi:noNamespaceSchemaLocation="file:///e:/GitRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/SmartDocument.xsd">
   <name>Test Smart Document</name>
   <description>This configuration supports testing Smart Document.</description>
   <version>0.5</version>
   
   <resources>
      <styleSheets>
         <styleSheet>../SmartDocument/SmartDocument.css</styleSheet>
      </styleSheets>

      <images>
         <image id="logoImage" title="ProcessPuzzle">../SmartDocument/Images/ProcessPuzzleLogo.jpg</image>
      </images>
      
      <javaScripts>
         <javaScript>../ResourceManager/DummyScript.js</javaScript>
      </javaScripts>
   </resources>

   <documentHeader tag="div" id="smartDocumentHeader">
      <compositeElement tag="div" id="headerWrapper">
         <element tag="h1" elementStyle="headerText" id="smartDocumentTitle" href="http://opensource.processpuzzle.com">SmartDocument.headerText</element>
         <element tag="img" id="processPuzzleLogo" source="../SmartDocument/Images/ProcessPuzzleLogo.jpg" />
      </compositeElement>
   </documentHeader>
   
   <documentBody tag="div" id="smartDocumentBody">
      <compositeElement tag="div" id="bodyWrapper">
         <dataElement tag="h3" id="currentUser" elementStyle="currentUser" source="../SmartDocument/UserProfile.xml" bind="/userProfile/userName[{userNameIndex}]" indexVariable="userNameIndex" minOccures="1" maxOccures="1" />
         <compositeElement tag="ul">SmartDocument.addresses
            <dataElement tag="li" id="userAddresses" source="../SmartDocument/UserProfile.xml" bind="/userProfile/addresses/address[{index}]" minOccures="0" maxOccures="unbounded" />
         </compositeElement>
         <element tag="h4">SmartDocument.roles</element>
         <compositeDataElement tag="ul" id="roleList" source="../SmartDocument/UserProfile.xml" bind="//userProfile/roles/role[{roleIndex}]" indexVariable="roleIndex" maxOccures="unbounded">
            <dataElement tag="li" id="roleName" source="../SmartDocument/UserProfile.xml" bind="//userProfile/roles/role[{roleIndex}]/@name"/>
	         <compositeDataElement tag="ul" id="activityList" source="../SmartDocument/UserProfile.xml" bind="//userProfile/roles/role[{roleIndex}]/activities/activity[{activityIndex}]" indexVariable="activityIndex" maxOccures="unbounded">
	            <dataElement tag="li" id="activityName" source="../SmartDocument/UserProfile.xml" bind="//userProfile/roles/role[{roleIndex}]/activities/activity[{activityIndex}]/@name"/>
	         </compositeDataElement>
         </compositeDataElement>
         <dataElement tag="h2" id="title" elementStyle="channelTitle" bind="/rss/channel/title"/>
         
         <formElement id="channelProperties" method="post" bind="/rss/channel">
	         <formField id="link" label="DynamicDocument.RSS.link" bind="/rss/channel/link"/>
	         <formField id="description" label="DynamicDocument.RSS.description" bind="/rss/channel/description"/>
	         <formField id="language" label="DynamicDocument.RSS.language" bind="/rss/channel/language"/>
	         <formField id="pubDate" label="DynamicDocument.RSS.pubDate" bind="/rss/channel/pubDate"/>
	         <formField id="lastBuildDate" label="DynamicDocument.RSS.lastBuildDate" bind="/rss/channel/lastBuildDate"/>
	         <formField id="docs" label="DynamicDocument.RSS.docs" bind="/rss/channel/docs"/>
	         <formField id="generator" label="DynamicDocument.RSS.generator" bind="/rss/channel/generator"/>
	         <formField id="managingEditor" label="DynamicDocument.RSS.managingEditor" bind="/rss/channel/managingEditor"/>
	         <formField id="webMaster" label="DynamicDocument.RSS.webMaster" bind="/rss/channel/webMaster"/>
         </formElement>

         <element  tag="h4" id="channelItems">SmartDocument.itemsTitle</element>
         <compositeDataElement tag="ul" id="channelItemsContainer" bind="/rss/channel/item[{index}]" maxOccures="unbounded">
	         <dataElement tag="li" elementStyle="title" id="itemTitle" bind="/rss/channel/item[{index}]/title"/>
	         <dataElement tag="li" elementStyle="description" id="itemDescription" bind="/rss/channel/item[{index}]/description"/>
         </compositeDataElement>
         
         <tableElement id="channelItemsContainer" bind="//rss/channel/item[{index}]" maxOccures="unbounded" isEditable="true">
            <tableColumn id="itemTitle" label="DynamicDocument.RSS.itemTitle" bind="//rss/channel/item/title"/>
            <tableColumn id="itemDescription" label="DynamicDocument.RSS.itemDescription" bind="//rss/channel/item/description"/>
         </tableElement>
<!--          
 -->         
         
      </compositeElement>
      
      <compositeElement tag="div" id="languageSelectorWrapper">
        <element tag="div" id="languageSelector">
           <plugin>
              <resources>
                 <styleSheets>
                    <styleSheet>../LanguageSelectorWidget/LanguageSelectorWidget.css</styleSheet>
                 </styleSheets>
                 <images>
                    <image>../LanguageSelectorWidget/Images/SelectorBackground-Left.gif</image>
                    <image>../LanguageSelectorWidget/Images/SelectorBackground-Right.jpg</image>
                 </images>
                 <javaScripts>
                    <javaScript>../../Source/LanguageSelectorWidget/LanguageChangedMessage.js</javaScript>
                    <javaScript>../../Source/LanguageSelectorWidget/LanguageSelectorWidget.js</javaScript>
                 </javaScripts>
              </resources>
              <widget name="LanguageSelectorWidget">
                 <options>
                    <option name="widgetContainerId" value="'languageSelector'"/>
                 </options>
              </widget>
           </plugin>
        </element>
        <element tag="p" id="copyright" href="http://www.processpuzzle.com">SmartDocument.copyright</element>
      </compositeElement>
   </documentBody>
   
   <documentFooter tag="div" id="newsReaderFooter">
      <compositeElement tag="div" id="footerWrapper">
         <element tag="h1" elementStyle="footerText" href="http://opensource.processpuzzle.com">Visit Open Source ProcessPuzzle</element>
      </compositeElement>
   </documentFooter>
</smartDocumentDefinition>
