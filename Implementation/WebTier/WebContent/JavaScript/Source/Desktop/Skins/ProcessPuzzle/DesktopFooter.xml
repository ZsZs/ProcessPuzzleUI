<?xml version="1.0" encoding="UTF-8"?>
<smartDocumentDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:pp="http://www.processpuzzle.com" 
   xmlns:sd="http://www.processpuzzle.com/SmartDocument" 
   xsi:noNamespaceSchemaLocation="file:///e:/GitRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/SmartDocument.xsd">
   <name>Desktop Footer Document</name>
   <description>Footer part of ProcessPuzzle desktop.</description>
   <version>0.5</version>
   
   <resources>
      <styleSheets></styleSheets>
      <images></images>
      <javaScripts></javaScripts>
   </resources>

   <documentBody tag="div" id="desktopFooterWrapper">
      <compositeElement tag="div" id="desktopFooter">
         <element tag="div" elementStyle="footerText" href="http://processpuzzle.com">DesktopConfigurator.footerText</element>
         <element tag="div" id="SkinSelectorWidget">
            <plugin>
               <resources>
                  <styleSheets>
                     <styleSheet>Desktops/ProcessPuzzle/Styles/SkinSelectorWidget.css</styleSheet>
                  </styleSheets>
               </resources>
               <widget name="SkinSelectorWidget">
                  <options>
                     <option name="widgetContainerId" value="'SkinSelectorWidget'"/>
                  </options>
               </widget>
            </plugin>
         </element>
      </compositeElement>
   </documentBody>
</smartDocumentDefinition>
