<?xml version="1.0" encoding="UTF-8"?>
<pp:desktopConfiguration 
	xmlns:pp="http://www.processpuzzle.com/Desktop"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.processpuzzle.com/ http://www.processpuzzle.com/Schemas/DesktopConfiguration.xsd">

	<name>ProcessPuzzleUI</name>
	<version>1.0</version>
	<description>This is full flagged desktop configuration.</description>
	<containerId>desktopContainer</containerId>
	<resources>
		<styleSheets>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Content.css</styleSheet>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Core.css</styleSheet>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Dock.css</styleSheet>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Layout.css</styleSheet>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Panels.css</styleSheet>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Tabs.css</styleSheet>
			<styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/Window.css</styleSheet>
		</styleSheets>
		<images></images>
		<javascripts></javascripts>
	</resources>
	
	<header tag="div" id="desktopHeader">
		<titleBar tag="div" id="desktopTitleBar">
			<compositeElement tag="div" id="desktopTitleBarWrapper">
				<element id='desktopTitle' tag="h1" elementStyle="applicationTitle" href="http://processpuzzle.com">DesktopConfigurator.desktopTitle</element>
				<element tag="h2" elementStyle="tagline">DesktopConfigurator.desktopSubTitle</element>
			</compositeElement>
		</titleBar>
		
		<navigationBar tag="div" id="desktopNavigationBar">
			<compositeElement id="navigationBarWrapper" tag="div">
				<element id="HorizontalMenuBar" tag="div">
					<plugin>
						<resources>
						   <styleSheets><styleSheet>../HierarchicalMenuWidget/HorizontalLayout.css</styleSheet></styleSheets>
						   <images><image>../HierarchicalMenuWidget/Images/HorizontalMenuBackground-Left-Normal.gif</image></images>
						</resources>
						<onLoad>function(){ return new HierarchicalMenuWidget({ widgetContainerId : 'HorizontalMenuBar', widgetDefinitionURI : '../HierarchicalMenuWidget/MenuDefinition.xml'}).construct();}</onLoad>
					</plugin>
				</element>
				<element tag="div" id="navigationBarText" elementStyle="navigationBarText">DesktopConfigurator.navigationBar</element>
				<element tag="div" id="LanguageSelectorWidget">
					<plugin>
					   <resources>
					      <styleSheets><styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/LanguageSelectorWidget.css</styleSheet></styleSheets>
					   </resources>
					   <onLoad>function(){ return new LanguageSelectorWidget({ widgetContainerId : 'LanguageSelectorWidget'}).construct();}</onLoad>
					</plugin>
				</element>

			</compositeElement>
		</navigationBar>
	</header>
	
	<windowDocker tag="div" id="dockWrapper"></windowDocker>
	
	<contentArea tag="div" id="pageWrapper"></contentArea>
	
	<footer tag="div" id="desktopFooterWrapper">
		<footerBar tag="div" id="desktopFooter">
			<element tag="div" id="footerText" elementStyle="footerText" href="http://processpuzzle.com">DesktopConfigurator.footerText</element>
			<element tag="div" id="SkinSelectorWidget">
				<plugin>
				   <resources>
				      <styleSheets>
				         <styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/SkinSelectorWidget.css</styleSheet>
				      </styleSheets>
				   </resources>
				   <onLoad>function(){ return new SkinSelectorWidget({ widgetContainerId : 'SkinSelectorWidget'}).construct();}</onLoad>
				</plugin>
			</element>
		</footerBar>
	</footer>
	
	<columns>
		<column name='leftColumn' placement='left' width='200' minimumWidth='100' maximumWidth='300' />
		<column name='mainColumn' placement='main' />
		<column name='rightColumn' placement='right' width='220' minimumWidth='200' maximumWidth='300' />
	</columns>
	
	<panels>
		<panel name='documents-browser' columnReference='leftColumn' height='250'>
			<title>DesktopConfigurator.Panel.contentBrowserTitle</title>
			<contentURL>../Desktop/Content/TreeView.html</contentURL>
		</panel>
		
		<panel name='documents-panel' columnReference='mainColumn' showHeader='true' height='400'>
			<title>DesktopConfigurator.Panel.documentsTitle</title>
			<contentURL>../Desktop/Content/HelloWorldContent.html</contentURL>
         <panelHeader toolBoxUrl="../Desktop/EmptyToolboxContent.html">
            <plugin>
               <resources>
                  <styleSheets>
                     <styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/DocumentToolBar.css</styleSheet>
                  </styleSheets>
                  <javascripts>
                  </javascripts>
               </resources>
               <onLoad>function() { return new ToolBarWidget({ widgetContainerId : 'documents-panel_headerToolbox', widgetDefinitionURI : '../ToolBarWidget/ToolBarDefinition.xml'}).unmarshall().construct(); }</onLoad>
            </plugin>
         </panelHeader>
			<document tag='div' id='panelDocumentWrapper' elementStyle='panelDocumentWrapper'>
			    <documentDefinitionUri>../Desktop/SmartDocumentDefinition.xml</documentDefinitionUri>
			    <documentContentUri>../Desktop/SampleDocumentContent.xml</documentContentUri>
			</document>
		</panel>
		
		<panel name='console' columnReference='mainColumn' height='100' showHeader='true'>
			<title>DesktopConfigurator.Panel.consoleTitle</title>
         <panelHeader toolBoxUrl="../Desktop/EmptyToolboxContent.html">
            <plugin>
               <resources>
                  <styleSheets>
                     <styleSheet>../Desktop/Skins/ProcessPuzzle/Styles/DocumentSelector.css</styleSheet>
                  </styleSheets>
                  <javascripts>
                  </javascripts>
               </resources>
               <onLoad>function() { return new TabWidget({ widgetContainerId : 'console_headerToolbox', widgetDefinitionURI : '../TabWidget/TabsDefinition.xml'}).construct(); }</onLoad>
            </plugin>
         </panelHeader>
		</panel>
		
		<panel name='menu-panel' columnReference='rightColumn' showHeader='true'>
			<title>DesktopConfigurator.Panel.menusTitle</title>
		</panel>
		
		<panel name='tips-panel' columnReference='rightColumn' height='150' showHeader='true'>
			<title>DesktopConfigurator.Panel.tipsTitle</title>
		</panel>
	</panels>
	
	<windows>
		<window></window>
	</windows>
</pp:desktopConfiguration>