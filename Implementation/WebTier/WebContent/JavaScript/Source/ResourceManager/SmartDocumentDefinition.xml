<?xml version="1.0" encoding="UTF-8"?>
<smartDocumentDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:pp="http://www.processpuzzle.com" 
   xmlns:sd="http://www.processpuzzle.com/SmartDocument" 
   xsi:noNamespaceSchemaLocation="file:///e:/GitRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/SmartDocument.xsd">
   <name>Test Smart Document</name>
   <description>This configuration supports testing Smart Document.</description>
   <version>0.5</version>
   
   <documentResources>
      <styleSheets>
         <styleSheet>../SmartDocument/SmartDocument.css</styleSheet>
         <styleSheet>../JsUnit/css/jsUnitStyle.css</styleSheet>
      </styleSheets>

      <images>
         <image id="logoImage" title="ProcessPuzzle">../SmartDocument/Images/ProcessPuzzleLogo.jpg</image>
      </images>
      
      <javascripts>
         <javascript>../ResourceManager/DummyScript.js</javascript>
         <javascript>../ResourceManager/ResourceManager.js</javascript>
      </javascripts>
   </documentResources>

   <documentHeader tag="div" name="smartDocumentHeader">
      <compositeElement tag="div" name="headerWrapper">
         <element tag="h1" elementStyle="headerText" name="SmartDocumentTitle" href="http://opensource.processpuzzle.com">SmartDocument.headerText</element>
      </compositeElement>
   </documentHeader>
   
   <documentBody tag="div" name="smartDocumentBody">
      <compositeElement tag="div" name="bodyWrapper">
         <element tag="h2" elementStyle="channelTitle" name="title" bind="/rss/channel/title"/>
         <compositeElement tag="ul" name="channelProperties">
	         <element tag="li" elementStyle="property" name="link" bind="/rss/channel/link"/>
	         <element tag="li" elementStyle="property" name="description" bind="/rss/channel/description"/>
	         <element tag="li" elementStyle="property" name="language" bind="/rss/channel/language"/>
	         <element tag="li" elementStyle="property" name="pubDate" bind="/rss/channel/pubDate"/>
	         <element tag="li" elementStyle="property" name="lastBuildDate" bind="/rss/channel/lastBuildDate"/>
	         <element tag="li" elementStyle="property" name="docs" bind="/rss/channel/docs"/>
	         <element tag="li" elementStyle="property" name="generator" bind="/rss/channel/generator"/>
	         <element tag="li" elementStyle="property" name="managingEditor" bind="/rss/channel/managingEditor"/>
	         <element tag="li" elementStyle="property" name="webMaster" bind="/rss/channel/webMaster"/>
         </compositeElement>
         <element  tag="h4" name="channelItems">SmartDocument.itemsTitle</element>
         <compositeElement tag="ul" name="channelItemsContainer" bind="/rss/channel/item" maxOccures="unbounded">
	         <element tag="li" elementStyle="title" name="itemTitle" bind="/rss/channel/item[{index}]/title"/>
	         <element tag="li" elementStyle="description" name="itemDescription" bind="/rss/channel/item[{index}]/description"/>
         </compositeElement>
      </compositeElement>
      <element tag="p" name="copyright" href="http://www.processpuzzle.com">SmartDocument.copyright</element>
   </documentBody>
   
   <documentFooter tag="div" name="newsReaderFooter">
      <compositeElement tag="div" name="footerWrapper">
         <element tag="h1" elementStyle="footerText" name="headerText" href="http://opensource.processpuzzle.com">Visit Open Source ProcessPuzzle</element>
      </compositeElement>
   </documentFooter>
</smartDocumentDefinition>
