<?xml version="1.0" encoding="UTF-8"?>
<smartDocumentDefinition 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:pp="http://www.processpuzzle.com" 
   xmlns:sd="http://www.processpuzzle.com/SmartDocument" 
   xsi:noNamespaceSchemaLocation="file:///e:/GitRepositories/ProcessPuzzleUI/Implementation/WebTier/Schemas/SmartDocument.xsd">
   <name>Test Smart Document</name>
   <description>This configuration supports testing Smart Document.</description>
   <version>0.5</version>
   
   <resources>
      <styleSheets>
         <styleSheet>DummyCSS.css</styleSheet>
         <styleSheet>../JsUnit/css/jsUnitStyle.css</styleSheet>
      </styleSheets>

      <images>
         <image id="logoImage" title="ProcessPuzzle">../SmartDocument/Images/ProcessPuzzleLogo.jpg</image>
      </images>
      
      <javaScripts>
         <javaScript>../ResourceManager/DummyScript.js</javaScript>
         <javaScript>../ResourceManager/ResourceManager.js</javaScript>
      </javaScripts>
   </resources>

   <documentHeader tag="div" id="smartDocumentHeader">
      <compositeElement tag="div" id="headerWrapper">
         <element tag="h1" elementStyle="headerText" id="SmartDocumentTitle" href="http://opensource.processpuzzle.com">SmartDocument.headerText</element>
      </compositeElement>
   </documentHeader>
   
   <documentBody tag="div" id="smartDocumentBody">
      <compositeElement tag="div" id="bodyWrapper">
         <dataElement tag="h2" elementStyle="channelTitle" id="title" bind="/rss/channel/title"/>
         <compositeElement tag="ul" id="channelProperties">
	         <dataElement tag="li" elementStyle="property" id="link" bind="/rss/channel/link"/>
	         <dataElement tag="li" elementStyle="property" id="description" bind="/rss/channel/description"/>
	         <dataElement tag="li" elementStyle="property" id="language" bind="/rss/channel/language"/>
	         <dataElement tag="li" elementStyle="property" id="pubDate" bind="/rss/channel/pubDate"/>
	         <dataElement tag="li" elementStyle="property" id="lastBuildDate" bind="/rss/channel/lastBuildDate"/>
	         <dataElement tag="li" elementStyle="property" id="docs" bind="/rss/channel/docs"/>
	         <dataElement tag="li" elementStyle="property" id="generator" bind="/rss/channel/generator"/>
	         <dataElement tag="li" elementStyle="property" id="managingEditor" bind="/rss/channel/managingEditor"/>
	         <dataElement tag="li" elementStyle="property" id="webMaster" bind="/rss/channel/webMaster"/>
         </compositeElement>
         <element  tag="h4" id="channelItems">SmartDocument.itemsTitle</element>
         <compositeDataElement tag="ul" id="channelItemsContainer" bind="/rss/channel/item" maxOccures="unbounded">
	         <dataElement tag="li" elementStyle="title" id="itemTitle" bind="/rss/channel/item[{index}]/title"/>
	         <dataElement tag="li" elementStyle="description" id="itemDescription" bind="/rss/channel/item[{index}]/description"/>
         </compositeDataElement>
      </compositeElement>
      <element tag="p" id="copyright" href="http://www.processpuzzle.com">SmartDocument.copyright</element>
   </documentBody>
   
   <documentFooter tag="div" id="newsReaderFooter">
      <compositeElement tag="div" id="footerWrapper">
         <element tag="h1" elementStyle="footerText" id="headerText" href="http://opensource.processpuzzle.com">Visit Open Source ProcessPuzzle</element>
      </compositeElement>
   </documentFooter>
</smartDocumentDefinition>
